---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="preload" as="image" href="/bg.png">
    <link rel="icon" type="image/x-icon" href="/favicon.png" />
    <style is:global>
      @font-face {
        font-family: 'PxPlus IMB VGA8';
        src: url('/fonts/PxPlus_IBM_VGA8.ttf') format('truetype');
      }

      html, body {
        height: 100%;
        width: 100%;
        background-color: #000080;
        color: #ffffff;
        margin: 0;
        padding: 0;
        cursor: default;
        font-smooth: never;
        font-family: 'PxPlus IMB VGA8', monospace;
        font-size: 16px;
        line-height: 1.2;
      }

      * {
        user-select: none;
        -webkit-user-select: none;
      }

      #menu_bar {
        margin-bottom: 0.8em;
        padding: 0.3em;
        background-color: #c0c0c0;
        border-bottom: 2px solid #808080;
      }

      .menu_item {
        display: block;
        color: #000000;
        padding: 0 1em;
      }

      #main_content {
        font-size: 1em;
        padding: 1em;
        white-space: pre;
        line-height: 1.2;
      }

      .page {
        display: none;
      }

      #fgbg {
        width: 100%;
        height: 100%;
        position: fixed;
        top: 0;
        left: 0;
        background-image: 
          linear-gradient(
            rgba(255,255,255,0.1) 1px, 
            transparent 1px
          );
        background-size: 100% 2px;
        pointer-events: none;
        opacity: 0.15;
      }

      @media (max-width: 768px) {
        html, body {
          font-size: 14px;
        }
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>